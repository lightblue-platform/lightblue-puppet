# set default isolation strategy for tests to SEMAPHORE else breakpoints in IDE
# when debugging unit tests will timeout with default strategy (THREAD).
hystrix.command.default.execution.isolation.strategy=<%=hystrix_command_default_execution_isolation_strategy%>
hystrix.command.default.execution.isolation.thread.timeoutInMilliseconds=<%=hystrix_command_default_execution_isolation_thread_timeoutInMilliseconds%>
# disable the circuit breaker, we deal with the errors
hystrix.command.default.circuitBreaker.enabled=<%=hystrix_command_default_circuitBreaker_enabled%>

# A workaround until https://github.com/lightblue-platform/lightblue-mongo/issues/125 is fixed
hystrix.threadpool.default.coreSize=<%=hystrix_threadpool_mongodb_coreSize%>

# Mongodb command settings
hystrix.threadpool.mongodb.coreSize=<%=hystrix_threadpool_mongodb_coreSize%>

